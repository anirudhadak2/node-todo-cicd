 pipeline {
        agent any
        stages{
            stage('Code'){
                steps{
                    git url: 'https://github.com/Maninderit/node-todo-cicd1.git', branch: 'master' 
                }
            }
            stage('Build and Test'){
                steps{
                    echo "$USER"
                    sh 'docker build -t webapp .'
                    echo "build and ttest completed"
                }
            }
            stage('Run'){
                steps{
                    sh "docker run -d -p 8000:8000 webapp"
                }
            }
        }       
        }
